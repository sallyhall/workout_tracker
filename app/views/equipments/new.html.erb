<%= form_for :equipment, url: equipments_path do |f| %>
	<div class="form-group">
		<%= f.label :name %>
		<%= f.text_field :name %>
	</div>
	<div class="form-group">
		<%= f.label :description %>
		<%= f.text_area :description %>
	</div>

	<div class="form-group">
		<%= f.submit %>
	</div>
<% end %>